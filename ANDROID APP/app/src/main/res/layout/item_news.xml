<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_5sdp">


    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/bg_border_rounded_grey"
        android:scaleType="centerCrop"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/TextAppearance.Medium"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/_13sdp"></TextView>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="00:00:00 "
            android:textColor="@color/yellow"
            android:textSize="@dimen/_12sdp"></TextView>

        <TextView
            android:id="@+id/tvMore"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Bold"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_yellow_rounded_btn"
            android:clickable="true"
            android:drawableRight="@drawable/ic_arrow_right_more"
            android:drawablePadding="@dimen/_3sdp"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/lbl_know_more"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"></TextView>
    </LinearLayout>
</LinearLayout>