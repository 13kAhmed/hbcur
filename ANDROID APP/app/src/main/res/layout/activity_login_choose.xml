<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginChooseActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main"></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llContent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_common"
        android:adjustViewBounds="true"
        android:src="@drawable/app_logo"></ImageView>

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_common">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="@dimen/_25sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/llFacebookContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/margin_common"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@drawable/ic_facebook"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_common"
                        android:gravity="center"
                        android:text="@string/lbl_continue_facebook"
                        android:textAppearance="@style/TextAppearance.Medium"
                        android:textColor="@color/app_color_primary"
                        android:textSize="@dimen/_14sdp"></TextView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"></View>

                <LinearLayout
                    android:id="@+id/llGoogleContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/margin_common"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@drawable/ic_google"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_common"
                        android:gravity="center"
                        android:text="@string/lbl_continue_google"
                        android:textAppearance="@style/TextAppearance.Medium"
                        android:textColor="@color/app_color_primary"
                        android:textSize="@dimen/_14sdp"></TextView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"></View>

                <LinearLayout
                    android:id="@+id/llAppleContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/margin_common"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@drawable/ic_apple"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_common"
                        android:gravity="center"
                        android:text="@string/lbl_continue_apple"
                        android:textAppearance="@style/TextAppearance.Medium"
                        android:textColor="@color/app_color_primary"
                        android:textSize="@dimen/_14sdp"></TextView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"></View>

                <LinearLayout
                    android:id="@+id/llPhoneContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingRight="@dimen/margin_common"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/bg_yellow_circle"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_call_vc"
                        app:tint="@color/white"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_common"
                        android:gravity="center"
                        android:text="@string/lbl_continue_mobile"
                        android:textAppearance="@style/TextAppearance.Medium"
                        android:textColor="@color/app_color_primary"
                        android:textSize="@dimen/_14sdp"></TextView>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/lbl_loging_terms_condition"
            android:textAppearance="@style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>

        <View
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/bg_white_rounded"></View>
    </LinearLayout>
    <include layout="@layout/layout_progress_bar"></include>
</RelativeLayout>